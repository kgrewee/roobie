{
    "name": "roobie",
    "version": "0.3.0",
    "description": "Minimalistic CSS and JavaScript framework.",
    "author": "Kyle Grewe",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kgrewee/roobie/issues"
    },
    "homepage": "https://github.com/kgrewee/roobie#readme",
    "keywords": [
        "centralized",
        "css-framework",
        "css",
        "js",
        "html"
    ],
    "main": "dist/roobie.min.js",
    "scripts": {
        "dry": "npm publish --dry-run",
        "package": "npm-run-all build copy docs",
        "build": "npm-run-all build:css build:css:prod build:js build:js:prod",
        "build:css": "cat src/**/*.css src/**/**/*.css  > dist/roobie.css",
        "build:css:prod": "minify dist/roobie.css > dist/roobie.min.css",
        "build:js": "cat src/**/*.js src/**/**/*.js  > dist/roobie.js",
        "build:js:prod": "minify dist/roobie.js > dist/roobie.min.js",
        "copy": "npm-run-all copy:themes copy:icons",
        "copy:themes": "cp -r src/themes/ dist/",
        "copy:icons": "cp -r src/icons/ dist/",
        "docs": "npm-run-all docs:js docs:css",
        "docs:js": "jsdoc dist/roobie.js -d docs/js",
        "docs:css": "",
        "prepare": "husky install"
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "jsdoc": "^3.6.10",
        "minify": "^8.0.3",
        "npm-run-all": "^4.1.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kgrewee/roobie.git"
    },
    "dependencies": {},
    "files": [
        "README.md",
        "LICENSE.md",
        "dist/",
        "examples/",
        "docs/"
    ],
    "directories": {
        "bin": "dist/",
        "example": "examples/",
        "doc": "docs/"
    }
}