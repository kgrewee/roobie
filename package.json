{
    "name": "roobie",
    "version": "0.0.7",
    "description": "Centralized CSS and JavaScript",
    "author": "Kyle Grewe",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kgrewee/roobie/issues"
    },
    "homepage": "https://github.com/kgrewee/roobie#readme",
    "keywords": [
        "centralized",
        "css-framework",
        "css",
        "js",
        "html"
    ],
    "main": "roobie.js",
    "scripts": {
        "build": "npm-run-all build:dev build:prod docs",
        "build:dev": "cat src/**/*.css src/**/**/*.css  > roobie.css && cat src/*.js src/**/**/*.js  > roobie.js",
        "build:prod": "minify roobie.css > roobie.min.css && minify roobie.js > roobie.min.js",
        "docs": "npm-run-all docs:js",
        "docs:js": "documentation build roobie.js -f md > docs/JS.md",
        "docs:jsdev": "documentation serve --watch roobie.js"

    },
    "devDependencies": {
        "documentation": "^13.2.5",
        "husky": "^7.0.4",
        "minify": "^8.0.3",
        "npm-run-all": "^4.1.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kgrewee/roobie.git"
    },
    "dependencies": {},
    "files": [
        "roobie.min.css",
        "roobie.min.js",
        "roobie.js",
        "roobie.css",
        "examples/"
    ]
}