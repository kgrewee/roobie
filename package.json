{
    "name": "roobie",
    "version": "0.3.3",
    "description": "Minimalistic CSS and JavaScript framework.",
    "author": "Kyle Grewe",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kgrewee/roobie.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kgrewee/roobie/issues"
    },
    "homepage": "https://github.com/kgrewee/roobie#readme",
    "keywords": [
        "centralized",
        "css-framework",
        "css",
        "js",
        "html"
    ],
    "main": "dist/roobie.min.js",
    "scripts": {
        "dry": "npm publish --dry-run",
        "package": "npm-run-all build copy docs",
        "build": "npm-run-all build:css build:js minify",
        "build:css": "cat src/**/*.css src/**/**/*.css  > dist/roobie.css",
        "build:js": "cat src/**/*.js src/**/**/*.js  > dist/roobie.js",
        "minify": "node minify.js",
        "copy": "npm-run-all copy:themes copy:icons",
        "copy:themes": "cp -r src/themes/ dist/",
        "copy:icons": "cp -r src/icons/ dist/",
        "docs": "npm-run-all docs:build docs:move",
        "docs:build": "",
        "docs:move": "",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@node-minify/clean-css": "^6.2.0",
        "@node-minify/core": "^6.2.0",
        "@node-minify/uglify-es": "^6.2.0",
        "husky": "^7.0.4",
        "npm-run-all": "^4.1.5"
    },
    "files": [
        "README.md",
        "LICENSE.md",
        "dist/",
        "examples/",
        "docs/"
    ],
    "directories": {
        "bin": "dist/",
        "example": "examples/",
        "doc": "docs/"
    }
}