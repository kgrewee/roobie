{
    "name": "roobie",
    "version": "0.2.4",
    "description": "Centralized CSS and JavaScript for Advanced Web Development.",
    "author": "Kyle Grewe",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kgrewee/roobie/issues"
    },
    "homepage": "https://github.com/kgrewee/roobie#readme",
    "keywords": [
        "centralized",
        "css-framework",
        "css",
        "js",
        "html"
    ],
    "main": "roobie.min.js",
    "scripts": {
        "build": "npm-run-all build:css build:css:prod build:js build:js:prod docs",
        "build:css": "cat src/animations/*.css src/themes/*.css src/animations/**/*.css src/components/**/*.css src/core/*.css src/layout/*.css src/utilities/*.css > roobie.css",
        "build:css:prod": "minify roobie.css > roobie.min.css",
        "build:js": "cat src/animations/*.js src/themes/*.js src/components/**/*.js src/utilities/*.js > roobie.js",
        "build:js:prod": "minify roobie.js > roobie.min.js",
        "docs": "npm-run-all docs:js docs:css",
        "docs:js": "jsdoc roobie.js -d docs/js",
        "docs:css": "",
        "prepare": "husky install"
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "jsdoc": "^3.6.10",
        "minify": "^8.0.3",
        "npm-run-all": "^4.1.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kgrewee/roobie.git"
    },
    "dependencies": {},
    "files": [
        "README.md",
        "LICENSE.md",
        "roobie.css",
        "roobie.js",
        "roobie.min.css",
        "roobie.min.js",
        "icons/",
        "examples/",
        "docs/",
        "src/themes/"
    ]
}
