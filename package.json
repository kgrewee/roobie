{
    "name": "roobie",
    "version": "0.4.0",
    "description": "Minimalistic CSS and JavaScript framework.",
    "author": "Kyle Grewe",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kgrewee/roobie.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kgrewee/roobie/issues"
    },
    "homepage": "https://github.com/kgrewee/roobie#readme",
    "keywords": [
        "centralized",
        "css-framework",
        "css",
        "js",
        "html"
    ],
    "main": "dist/roobie.min.js",
    "scripts": {
        "dry": "npm publish --dry-run",
        "package": "npm-run-all build bundle minify copy docs",
        "build": "npm-run-all build:css build:js",
        "build:css": "cat src/core/**/*.css src/core/**/**/*.css  > dist/roobie.css",
        "build:js": "cat src/core/**/*.js src/core/**/**/*.js  > dist/roobie.js",
        "bundle": "npm-run-all bundle:css bundle:js",
        "bundle:css": "cat src/**/*.css src/**/**/*.css src/**/**/**/*.css  > dist/roobie.bundle.css",
        "bundle:js": "cat src/**/**/*.js src/**/**/**/*.js  > dist/roobie.bundle.js",
        "minify": "node minify.js",
        "copy": "npm-run-all copy:themes copy:icons",
        "copy:themes": "cp -r src/themes/ dist/",
        "copy:icons": "cp -r src/icons/ dist/",
        "docs": "npm-run-all docs:move",
        "docs:move": "cp dist/roobie.bundle.css docs/includes/ && cp dist/roobie.bundle.js docs/includes/ && cp -r src/icons/ docs/includes/",
        "docs:serve": "cd docs && python3 -m http.server 3000",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@node-minify/clean-css": "^6.2.0",
        "@node-minify/core": "^6.2.0",
        "@node-minify/uglify-es": "^6.2.0",
        "husky": "^7.0.4",
        "npm-run-all": "^4.1.5"
    },
    "files": [
        "README.md",
        "LICENSE.md",
        "dist/",
        "examples/",
        "docs/"
    ],
    "directories": {
        "bin": "dist/",
        "example": "examples/",
        "doc": "docs/"
    }
}